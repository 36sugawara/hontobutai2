<%= turbo_frame_tag dom_id(book, :bookmark_book) do %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(book_id: book.id)),
              id: "js-bookmark-button-for-book-#{book.id}",
              data: { turbo_method: :delete } do %>
    <i class="fa-solid fa-heart fa-lg"></i>
  <% end %>
<% end %>